<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.socialstock"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.socialstock.DashboardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name="com.socialstock.LoginActivity"
            android:label="Login Account" >
        </activity>

        <!-- Register Activity -->
        <activity
            android:name="com.socialstock.RegisterActivity"
            android:label="Register New Account" >
        </activity>
        <activity
            android:name="com.socialstock.MyStocks"
            android:label="@string/title_activity_my_stocks" >
        </activity>
        <activity
            android:name="com.socialstock.Ranking"
            android:label="@string/title_activity_ranking" >
        </activity>
        <activity
            android:name="com.socialstock.Addstock"
            android:label="@string/title_activity_addstock" >
        </activity>
    </application>

    <!-- Allow to connect with internet -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>